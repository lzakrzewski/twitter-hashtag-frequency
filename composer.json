{
  "name": "lzakrzewski/twitter-keyword-frequency",
  "type": "library",
  "description": "CLI tool for read frequency of keywords in last 100 tweets from a given account",
  "license": "MIT",
  "authors": [
    {
      "name": "lzakrzewski",
      "email": "contact@lzakrzewski.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "TwitterKeywordFrequency\\": "src/TwitterKeywordFrequency"
    }
  },
  "autoload-dev": {
    "psr-4" : {
      "tests\\": "tests"
    }
  },
  "require": {
    "php": ">=7.0",
    "symfony/console": "~3.1",
    "guzzlehttp/guzzle": "~6.0"
  },
  "require-dev": {
    "fabpot/php-cs-fixer": "~1.6",
    "squizlabs/php_codesniffer": "~2.3",
    "phpmd/phpmd": "~2.2",
    "mayflower/php-codebrowser": "~1.1",
    "phpunit/phpunit": "~5.0"
  },
  "config": {
    "bin-dir": "bin"
  },
  "scripts": {
    "static-analysis": [
      "./bin/php-cs-fixer fix --config-file=artifacts/.php_cs",
      "./bin/phpcs --standard=./artifacts/phpcs.xml --extensions=php src tests",
      "./bin/phpmd src,tests text ./artifacts/phpmd.xml"
    ],
    "static-analysis-ci": [
      "./bin/php-cs-fixer fix --dry-run --config-file=artifacts/.php_cs",
      "./bin/phpcs --standard=./artifacts/phpcs.xml --extensions=php src tests",
      "./bin/phpmd src,tests text ./artifacts/phpmd.xml"
    ],
    "test": [
      "@static-analysis",
      "./bin/phpunit"
    ],
    "test-ci": [
      "@static-analysis-ci",
      "./bin/phpunit"
    ]
  }
}
